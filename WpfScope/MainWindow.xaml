<Window x:Class="WpfScope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfScope"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="resultField" Width="200" Height="20" TextAlignment="Center">0</TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Margin="0, 0, 10, 0" Content="+1" Click="CountButton" Tag="+"></Button>
                <Button Content="-1" Click="CountButton" Tag="-"></Button>
            </StackPanel>
            <Button Margin="0, 10, 0, 0" Click="NewWindow">New Window</Button>
        </StackPanel>
    </Grid>
</Window>
